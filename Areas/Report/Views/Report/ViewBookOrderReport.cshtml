<script>
    function ReportValidationchk()
    {
        var tsearch = $("#txtsearch").val();
        var fdate = $("#id-date-picker-1").val();
        var tdate = $("#id-date-picker-2").val();
        
        url = "../../Areas/Report/OrderReportView.aspx?search=" + tsearch + "&fromdate=" + fdate + "&todate=" + tdate ;
        var myframe = document.getElementById("ifrmorderRpt");
        if (myframe !== null) {
            //alert('p');
            if (myframe.src) {
                //alert('frame');
                myframe.src = url;
            }
            else if(myframe.contentWindow!==null && myframe.contentWindow.location!==null)
            {
                //alert('k');
                myframe.contentWindow.location = url;
                //alert(myframe.contentWindow.location);
            }
            else{myframe.setAttribute('src',url)}
        }
    }
   
   
</script>
