@model List<PrachiIndia.Portal.Areas.Report.Models.RetailOrderVM>
@{var groupedModel = Model.GroupBy(item => item.TransactionID);}

@if (ViewBag.Type == "Detailed_1")
{
    <table id="order-detail" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <td>Order Details</td>
            </tr>
        </thead>
        <tbody>

            @{int count = 1; }
            @foreach (var group in Model)
            {
                <tr>
                    <td>
                        @if (group.TransactionID == "")
                        {

                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 id="idTotal" class="card-title">Order Details</h4>
                                </div>
                                <div class="panel-body">
                                    No Record Found
                                </div>
                            </div>
                        }
                        else
                        {

                            <div class="panel panel-primary">
                                <div class="panel-heading">
                                    <h4 id="idTotal" class="card-title"><b>TransactionId</b> :  @group.TransactionID</h4>
                                </div>
                                <div class="panel-body">

                                    <div class="container">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="col-md-12">
                                                    <div class="col-sm-3">
                                                        <dl>
                                                            <dt>Name</dt>
                                                            <dd>@group.Name</dd>
                                                        </dl>
                                                    </div>
                                                    <div class="col-sm-3">
                                                        <dl>
                                                            <dt>Email</dt>
                                                            <dd>@group.Email</dd>
                                                        </dl>
                                                    </div>
                                                    <div class="col-sm-3">
                                                        <dl>
                                                            <dt>Contact No</dt>
                                                            <dd>@group.PhoneNo</dd>
                                                        </dl>
                                                    </div>
                                                    <div class="col-sm-3">
                                                        <dl>
                                                            <dt>Order Date</dt>
                                                            <dd>@group.OrderDate.ToString("dd/MM/yyyy")</dd>
                                                        </dl>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <table class="table table-bordered">
                                                    <thead class="table-dark">
                                                        <tr>
                                                            <td>Title</td>
                                                            <td>Price</td>
                                                            <td>Class</td>
                                                            <td>Quantity</td>
                                                        </tr>
                                                    <thead>
                                                    <tbody>
                                                        @foreach (var item in group.RetailOrderVMsList)
                                                        {
                                                            <tr>
                                                                <td>@item.Title</td>
                                                                <td>@item.Price</td>
                                                                <td>@item.classes</td>
                                                                <td>@item.Quantity</td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </td>
                </tr>
                count = count + 1;


            }

        </tbody>

    </table>

}

