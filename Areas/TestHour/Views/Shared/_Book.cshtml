
@model IEnumerable<PrachiIndia.Sql.tblCataLog>
<h5 class="title">Books(@Model.Count())</h5>
<table class="table table-striped table-bordered">
    <tbody>
        <tr>
            <th width="10" style="text-align:center">#SrNo.</th>
            <th width="120" style="text-align:center">Image</th>
            <th width="100">Title</th>
            <th width="100">Series</th>

            <th width="70" style="text-align:center">Board</th>
            <th width="70" style="text-align:center">Class</th>
            <th width="100" style="text-align:center">
                Contents
                <table style="width:100%;">
                    <tbody>
                        <tr>
                            <td style="text-align:center">EB</td>
                            <td style="text-align:center">LP</td>
                            <td style="text-align:center">WS</td>
                            <td style="text-align:center">SOL</td>
                            <td style="text-align:center">A/V</td>
                        </tr>
                    </tbody>
                </table>
            </th>
        </tr>
    </tbody>
    <tbody id="tbody">
        @if (Model.Count() > 0)
        {
            {
                int count = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td style="text-align:center">@count</td>
                        <td style="text-align:center">
                            <div id="dvImageShow_@item.Id" _id="@item.Id" style="position:relative;">
                                <img id="img" src="/ModuleFiles/Items/@item.Image" onerror="onImgError(this);" onload="setDefaultImage(this);" style="float:left; height:42px; width:42px;">
                            </div>
                        </td>
                        <td id="tdtitle_53"><a target="_blank" href="/CPanel/Admin/BookDetails/@item.Id"> @item.Title</a></td>
                        <td id="tdtitle_53"><a target="_blank" href="/Home/SeriesDetail/@item.SeriesId"> @item.Series</a></td>
                        <td style="text-align:center" id="@item.Id"> @item.Board</td>
                        <td style="text-align:center" id="tclass_@item.Id"> @item.Class</td>
                        <td>
                            <table style="width:100%;">
                                <tbody>
                                    <tr>
                                        @if (item.Ebook == 1)
                                        {
                                            <td style="text-align:center;color:green;"><i class="fa fa-check"></i></td>
                                        }
                                        else
                                        {
                                            <td style="text-align:center;color:red;"><i class="fa fa-times"></i></td>
                                        }
                                        @if (item.LessonPlan == true)
                                        {
                                            <td style="text-align:center;color:green;"><i class="fa fa-check"></i></td>
                                        }
                                        else
                                        {
                                            <td style="text-align:center;color:red;"><i class="fa fa-times"></i></td>
                                        }
                                        @if (item.Worksheet == true)
                                        {
                                            <td style="text-align:center;color:green;"><i class="fa fa-check"></i></td>
                                        }
                                        else
                                        {
                                            <td style="text-align:center;color:red;"><i class="fa fa-times"></i></td>
                                        }
                                        @if (item.Solutions == 1)
                                        {
                                            <td style="text-align:center;color:green;"><i class="fa fa-check"></i></td>
                                        }
                                        else
                                        {
                                            <td style="text-align:center;color:red;"><i class="fa fa-times"></i></td>
                                        } @if (item.Multimedia == 1)
                                        {
                                            <td style="text-align:center;color:green;"><i class="fa fa-check"></i></td>
                                        }
                                        else
                                        {
                                            <td style="text-align:center;color:red;"><i class="fa fa-times"></i></td>
                                        }
                                    </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                    count = count + 1;
                }

            }
        }
        else
        {
            <tr>
                <td colspan="7"><h4 style="color:red;text-align:center">No record found!!!</h4></td>
            </tr>
        }

    </tbody>
</table>
