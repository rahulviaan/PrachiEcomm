
@{
    ViewBag.Title = "VerifyPayment";
    Layout = "~/Areas/CPanel/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="col-md-12" style="margin-bottom:1%;">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h2>Verify Payment</h2>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("VerifyPayment", "PaymentInfo", FormMethod.Post))
                        {
                            <div class="row form-group">
                                <label class="col-md-3 control-label">Payment ID</label>
                                <div class="col-md-9">
                                    <input type="text" name="paymentId" class="form-control" />
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-offset-3">
                                    <input type="submit" class="btn btn-primary" value="Search" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
     
    </div>
</div>