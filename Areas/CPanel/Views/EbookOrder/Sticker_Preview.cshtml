@model PrachiIndia.Portal.Areas.CPanel.Models.ViewModels.StickerVM
@{
    ViewBag.Title = "Sticker_Preview";
    @*Layout = null;
        @Styles.Render("~/Dashboard/css")
        @Scripts.Render("~/bundles/dashboard")*@
}
<style type="text/css">
    #PrintTable label {
        width: 95px;
        margin-right: 5px;
        text-align: right;
    }

    .table thead > tr > th, .table tbody > tr > th, .table tfoot > tr > th, .table thead > tr > td, .table tbody > tr > td, .table tfoot > tr > td {
        padding: 5px 8px;
        line-height:18px;
    }
</style>

<div style="width:525px; height:288px; margin:20px auto; padding:5px;">
    <div id="PrintTable" class="form-horizontal">
        <table class="table table-responsive">
            <tbody>
                <tr>
                    <td colspan="2">
                        <h4 style="text-align:center;">PRACHI [INDIA] PVT. LTD.</h4>
                    </td>
                </tr>
                <tr>
                    <td width="100"><label>PO# : </label></td>
                    <td><span>@Model.PONumber</span></td>
                </tr>
                <tr>
                    <td><label>School Name : </label></td>
                    <td><span>@Model.SchoolName</span></td>
                </tr>
                <tr>
                    <td><label>Email : </label></td>
                    <td><span>@Model.Email</span></td>
                </tr>
                <tr>
                    <td><label>Mobile : </label></td>
                    <td><span>@Model.MObileNo</span></td>
                </tr>
                <tr>
                    <td><label>Address : </label></td>
                    <td><span>@Model.Address</span></td>
                </tr>
                <tr>
                    <td><label>DVD's : </label></td>
                    <td>
                        <span>
                            @Model.Dvds
                        </span>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <button id="btnPrint" class="btn btn-primary no-print" title="Print" onclick="myFunction();" style="margin-left:200px;">
        <i class="fa fa-print"></i>
    </button>
</div>


<script>
    function myFunction() {
        $('#btnPrint').css('display', 'none');
        $('#sidebar').css('display', 'none');
        $('.header').css('display', 'none');

        window.print();
        $('#btnPrint').css('display', 'block');
        $('#sidebar').css('display', 'block');
        $('.header').css('display', 'block');
        //var printContents = document.getElementById("PrintTable").innerHTML;
        //w = window.open();
        //w.document.write(printContents);
        //w.print();
        //w.close();
    }
</script>