@model IEnumerable<PrachiIndia.Sql.MasterBoard>
@{
    ViewBag.Title = "Boards";
}

<style type="text/css">
    #tbody a {
        cursor: pointer;
    }
</style>
<div class="container-fluid">
    <div class="panel panel-default">
        <div class="panel-heading"><h4 style="padding: 8px 0;">Board (@Model.Count())<span class="pull-right"><a href="@Url.Action("ManageBoards", "Admin")" class="btn btn-primary btn-sm" title='Add Subject'><i class="fa fa-plus"></i></a></span></h4></div>
        <div class="panel-body">

            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr><th>Sr No#</th><th>Title</th><th>Action</th></tr>
                    </thead>

                    <tbody id="tbody">
                        @{int count = 0;
                            foreach (var board in Model)
                            {
                                <tr>
                                    <td>@(count + 1)</td>
                                    <td>@board.Title</td>
                                    <td>
                                        @if (board.Status == 1)
                                        {
                                            <input type="checkbox" checked="checked" title="Update Status" style="cursor:pointer" onchange="ActiveInactive(@board.Id,this)" />
                                        }
                                        else
                                        {
                                            <input type="checkbox" title="Update Status" style="cursor:pointer" onchange="ActiveInactive(@board.Id,this)" />
                                        }
                                        &nbsp;
                                        &nbsp;
                                        &nbsp;
                                        <a title="Edit Subject" class="text-primary" href="@Url.Action("ManageBoards", "Admin", new { id = board.Id })"><i class="fa fa-pencil"></i></a>&nbsp;
                                        @*<a title="Delete Subject" class="text-danger"  onclick="return confirm('Are you sure to delete ?')" href="@Url.Action("DeleteBoard","Admin", new { BoardID = board.Id })"><i class="glyphicon glyphicon-trash"></i></a>&nbsp;*@
                                    </td>
                                </tr>
                                count = count + 1;
                            }
                        }
                    </tbody>
                </table>
            </div>


        </div>
    </div>
</div>






<script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
<link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet">
<script type="text/javascript">
     function ActiveInactive(ID, object) {
            var ckb = $(object).is(':checked');
            $.ajax({
                type: "POST",
                url: "/Admin/DeleteBoard",
                data: { BoardID: ID, Flag: ckb },
                success: function (data) {
                    if (data == 'true')
                        toastr.success("Board Activated Successfully", '', { timeOut: 5000 })
                    else
                        toastr.success("Board Deactivated Successfully", '', { timeOut: 5000 })
                },
                error: function () {
                    alert("Error occured!!")
                }
            });

        }
</script>
