@model PrachiIndia.Portal.Areas.CPanel.Controllers.partialClass

<table class="table table-condensed table-bordered">
    <thead class="text-danger">
        <tr>
            <th><input type="checkbox" id="select_all" /><span>Select</span></th>
            <th>Books</th>
        </tr>
    </thead>

    <tbody class="text-success">
        @if (Model.lstReadEdgeBookModel.Count > 0)
        {
            for(var i = 0; i < Model.lstReadEdgeBookModel.Count; i++)
            {
                <tr>
                    <td>
                       @Html.CheckBoxFor(model => model.lstReadEdgeBookModel[i].Selected, new { @class = "checkbox" })
                       @Html.HiddenFor(model => model.lstReadEdgeBookModel[i].BookID)
                    </td>
                    <td>@Model.lstReadEdgeBookModel[i].BookName</td>
                </tr>
            }
        }
        else
        {
            <tr>
               <td colspan="2">
                   <h4 style="color:red;text-align:center">No Book Available</h4>
                </td>
            </tr>
        }
        <tr>
            <td colspan="2" class="text-center">
                <button type="submit" class="btn btn-primary btn-sm" id="btnMigration">Migration</button>
            </td>

        </tr>
    </tbody>

</table>


<script>
    $(document).ready(function () {
        $("#Migration")
        $("#select_all").change(function () {
            var status = this.checked;
            $('.checkbox').each(function () {
                this.checked = status;
            });
        });
        $('.checkbox').change(function () {
            if (this.checked == false) {
                $("#select_all")[0].checked = false;
            }
            if ($('.checkbox:checked').length == $('.checkbox').length) {
                $("#select_all")[0].checked = true;
            }
        });
    })
</script>
