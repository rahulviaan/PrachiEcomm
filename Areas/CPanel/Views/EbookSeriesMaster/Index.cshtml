        //        url: "/EbookSeriesMaster/GetSearchRecord?SearchText=" + searchtext,
        //        contentType: "html",
        //        success: function (response) {
        //            $("#ebooktable").html(response);
        //        }
        //    })
        //})
    });

    var AddEditebookSeries = function (Id) {
        var url = "/EbookSeriesMaster/AddEditebookSeries?Id=" + Id;
        //$("#myModalBodyDiv1").load(url, function () {
        //    alert("");
        //    $("#myModal1").modal("show");
        //})
        //$("#myModal1").modal("show");
       // $("#myModal1").modal("hide");

        $("#myModalBodyDiv1").html("<div style='text-align:center;display:none' id='loader'><img src='/img/Loader.gif' width='150' /></div>");
        $("#loader").show();
        var url = "/EbookSeriesMaster/AddEditebookSeries?Id=" + Id;
        $.ajax({
            type: "Get",
            url: url,
            success: function (response) {
                $("#myModalBodyDiv1").html(response);
                $("#loader").hide();
                $("#myModal1").modal("show");
            }
        })
    }

    var DeleteQuestion = function (Id) {
        var url = "/Delete_eBookSeries/DeleteQuestion?Id=" + Id;

        $.ajax({
            type: "Post",
            url: url,
            success: function (response) {
                $("#ebooktable").html(response);
                $("#_" + Id).remove();
            }
        })
    }

    var ConfirmDelete = function (TopicID) {
        $("#ebookSeriesID").val(TopicID);
        jQuery("#myModal").modal('show');

    }

    var DeleteeBookSeries = function () {

        $("#loaderDiv").show();

        var ebookSeriesID = $("#ebookSeriesID").val();
        $.ajax({

            type: "POST",
            url: "/EbookSeriesMaster/Delete_eBookSeries",
            data: { ID: ebookSeriesID },
            success: function (result) {
                $("#loaderDiv").hide();
                $("#myModal").modal('hide');
                $("#row_" + ebookSeriesID).remove();
                //window.location.href = "/CPanel/EbookSeriesMaster/index";
            }
        });

    }
</script>