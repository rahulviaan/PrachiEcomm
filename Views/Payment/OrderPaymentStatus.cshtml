@model  PrachiIndia.Portal.Models.Response
@{
    Layout = null;
    var status = "";
    if (Model.Status == "FAILURE")
    {
        status = "<span style='font-size:14px;'>PAYMENT STATUS : <b style='color:#ae0910;'>   "+Model.Status+" </b></span>";
    }
    else
    {
        status = "<span style='font-size:14px;'>PAYMENT STATUS : <b style='color:#16760B;'> "+Model.Status+"</b></span>";
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
   <title>Order Info :: @Model.OrderId  </title> 
    <style>
        @@media print {
   .notprint{display:none;}
}

    </style>
     
    
</head>
<body>
    <div class="notprint" style="text-align:center">
        <a title="Click to print this page." href="javascript:void(0);" type="button" onclick="window.print();" value="Print">
            <img src="~/Images/print.jpg" />       </a>
        <a title="Click to download pdf this page."href="@Url.Action("FileResultCreatePdf","Payment", new {id=Model.Id })">

            <img src="~/Images/pdf.jpg" />
        </a>
    </div>
    <table class="print" border='0' cellpadding='0' cellspacing='0' width='720' align='center' style='font-family: verdana; font-size: 12px; line-height: 18px; border: solid 1px #f1f1f1;'>
        <tr>
            <td style='padding: 10px; width: 700px;'>
                <table border='0' cellpadding='0' cellspacing='0' width='100%'>
                <tr>
                    <td colspan="2">
                        <h2 style="text-align:center">Thank you for your order. @Html.Raw(status)</h2>
                        <hr />
                    </td>
                </tr>
                    <tr>
                        <td align='left'>
                           
                            <p>@Html.Raw(status)</p>
                            <h4>Order Id :  @Model.OrderId   <br />Date :  @Model.dtmCreate  </h4>
                        </td>
                        <td align='right'>
                            <img src='http://prachiindia.com/img/logos/logo.png' width='200' alt='logo' />
                        </td>
                    </tr>
                    <tr>
                        <td align='left' colspan='2'>
                            <h4 style='text-decoration:underline;'>Order By:</h4>
                            <p>
                                Name: @Model.CustomerName <br />Phone Number:@Model.AspNetUser.PhoneNumber
                            </p>
                            <h4 style='text-decoration:underline;'>Product Info:</h4>
                            <p>@Model.ProductInfo </p>
                        </td>
                    </tr>
                </table><br /><br />
                <table cellpadding='10' cellspacing='0' width='100%' border='1'>
                    <thead>
                        <tr>
                            <th align='left'>Item</th>
                            <th align='right'>Unit Price(INR)</th>
                            <th align='right'>Quantity</th>
                            <th align='right'>Discount(%)</th>
                            <th align='right'>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            decimal sum = 0;
                            decimal totalDiscount = 0;
                            if (Model.Products != null && Model.Products.Any())
                            {
                                foreach (var itemcart in Model.Products)
                                {
                                    var price = Convert.ToDecimal(itemcart.Price);
                                    var dscPrice = price - itemcart.TotalAmount;
                                    var discount = dscPrice;
                                    totalDiscount = totalDiscount + discount;
                                    sum = sum + itemcart.TotalAmount;
                                    <tr>
                                        <td align='left'> @itemcart.Title </td>
                                        <td align='right'> INR @price.ToString("N2")</td>
                                        <td align='right'> @itemcart.Quantity </td>
                                        <td align='right'>  @itemcart.Discount % ( INR @dscPrice.ToString("N2")  )</td>
                                        <td align='right'> INR @itemcart.TotalAmount.ToString("N2")</td>
                                    </tr>
                                }
                            }
                        }
                    </tbody>
                </table>
                <div style='text-align:right;font-weight:bold'>
                    <br />
                    Total Discount : INR @totalDiscount.ToString("N2") <br />
                    Total Amount : INR @sum.ToString("N2")
                </div>
                <div> <hr /> <br /><br /><br /></div>
                Regards <br />
                <a href='http://prachiindia.com/'>Prach [India] Pvt. Ltd.</a><br />
                <a href='http://prachiindia.com/'>www.prachiindia.com</a><br />
                <a href='mailto:info@prachiindia.com'>info@prachiindia.com</a><br />
                309/10, ALLIED HOUSE,<br />
                INDER LOK,DELHI-110035<br />
                Contact no: +91-11-47320666(8 Lines)

            </td>
        </tr>
    </table>
</body>
</html>
