@model PrachiIndia.Portal.Models.RegisterViewModel
@*change start here *@
<div class="modal fade" id="EditAddress">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content" style="border-radius: 5px;border: solid 1px #ededed; box-shadow: none;">
            <div class="modal-header">
                <button type="button" class="close" onclick="clearvalidation();" data-dismiss="modal">
                    <span class="h4"><span class="glyphicon glyphicon-remove"></span></span>
                </button>
                <h4 class="modal-title"><span class="glyphicon glyphicon-shopping-cart"></span> <span class="small">100% Secure, Safe Online Shipping   &amp; Order Processing</span> </h4>
            </div>

            <div class="modal-body" style="background: #eeeeee; width:100%; float:left">
                <div class="clearfix"></div>
                <div id="orderPageWrapper" class="orderPageWrapper">
                    <div id="orderPage" class="orderPage">
                        <div id="sign-up">
                            <div id="fieldProfile">
                                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="col-md-12">
                                        <div id="" class="col-md-12 text-center">
                                            <h3>Complete Your Registeration</h3>
                                        </div>
                                        <div class="form-group">
                                            <div id="" class="col-md-6">
                                                <label for="txtRegisterName" class="form-control-label">Name<span>@Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })</span></label>

                                                @Html.HiddenFor(m => m.SubscriptionId)
                                                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", id = "n" })

                                            </div><!-- form-group -->
                                            <div id="" class="col-md-6">
                                                <label for="txtRegisterName" class="form-control-label">Email<span>@Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })</span> </label>

                                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "abc@gmail.com" })

                                            </div><!-- form-group -->
                                        </div>
                                        <div class="form-group">
                                            <div id="" class="col-md-6">
                                                <label for="txtRegisterPhone" class="form-control-label">Phone <span>@Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })</span></label>

                                                @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                                                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })

                                            </div><!-- form-group -->
                                            <div id="" class="col-md-6">
                                                <label for="txtRegisterPhone" class="form-control-label"> Password <span>@Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })</span></label>

                                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })

                                            </div><!-- form-group -->
                                        </div>
                                        <div class="form-group">
                                            <div id="" class="col-md-6">
                                                <label for="txtRegisterPhone" class="form-control-label"> Confirm Password <span>@Html.ValidationMessageFor(m => m.confirmPassword, "", new { @class = "text-danger" })</span></label>

                                                @Html.ValidationMessageFor(m => m.confirmPassword, "", new { @class = "text-danger" })
                                                @Html.PasswordFor(m => m.confirmPassword, new { @class = "form-control" })

                                            </div>

                                            <div id="" class="col-md-6">
                                                <label for="txtRegisterAddress" class="form-control-label"> Address<span>@Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })</span></label>
                                                @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                                            </div>
                                        </div>
                                        <div class="clearfix"></div>
                                        <div class="form-group">
                                            <div id="" class="col-md-4">
                                                <label for="txtRegisterState" class="form-control-label">Country</label>
                                                <div id="" class="input-group">
                                                    @if (ViewData["list"] != null)
                                                    {
                                                        @Html.DropDownListFor(model => model.Country, ViewData["list"] as IEnumerable<SelectListItem>, "-Select Country-", new { @id = "CountryId", @class = "form-control" })

                                                    }
                                                </div>
                                            </div><!-- form-group -->
                                            <div id="" class="col-md-4">
                                                <label for="txtRegisterState" class="form-control-label"> State</label>
                                                <div id="" class="input-group" style="width:100%">
                                                    @Html.DropDownListFor(model => model.State, ViewData["State"] as IEnumerable<SelectListItem>, "-Select State-", new { @id = "StateId", @class = "form-control" })
                                                </div>
                                            </div><!-- form-group -->
                                            <div id="" class="col-md-4">
                                                <label for="txtRegisterCity" class="form-control-label"> City</label>
                                                <div id="" class="input-group" style="width:100%">
                                                    @Html.DropDownListFor(model => model.City, ViewData["City"] as IEnumerable<SelectListItem>, "-Select City-", new { @id = "CityId", @class = "form-control" })
                                                </div>
                                            </div><!-- form-group -->
                                        </div>
                                        <div class="form-group">
                                            <div id="" class="col-md-6">
                                                <label for="txtRegisterPincode" class="form-control-label"> Pincode <span>@Html.ValidationMessageFor(m => m.Pincode, "", new { @class = "text-danger" })</span></label>
                                                <div id="" class="input-group" style="width:100%">
                                                    @Html.TextBoxFor(m => m.Pincode, new { @class = "form-control" })
                                                </div>
                                            </div><!-- form-group -->
                                        </div>
                                        <span id="errCommon" class=""></span>

                                        <div id="" class="text-center col-md-12">
                                            <input type="submit" id="btnRegisterEnable" class="btn btn-primary" value="Complete your Account Registeration" onclick="javascript:jsRegister2('Cart2','orderPage');">
                                        </div>
                                    </div><!-- form-group -->
                                }
                            </div><!-- col-lg-12 -->
                        </div><!-- row -->
                        <!-- ---------------------------------------------------------------- -->



                    </div><!-- orderPage -->
                </div><!-- orderPageWrapper -->

            </div>
            <div class="modal-footer">

                <div id="" class="col-lg-11 text-left text-uppercase text-muted ">
                    <p><span class="pull-left small">By creating account, building profile, signing in and sharing Personal Information, I understand and agree all the relevant terms and conditions.    We do not share any information with third party(s) in any form, without your written prior concent.</span></p>

                </div>


            </div>
        </div>

    </div>
</div>
@*change End Here *@



