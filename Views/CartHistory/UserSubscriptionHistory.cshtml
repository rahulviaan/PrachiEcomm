@model List<PrachiIndia.Portal.Models.SubscriptionVm>
@{
    ViewBag.Title = "UserCartHistory";
    Layout = "~/Views/Shared/_LayoutCatalouge.cshtml";
}
@Html.Partial("_Settings")
<div class="col-md-9">
    <div class="accountset">
        <div class="panel-body">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Subscription history<span class="extra-title muted"></span></h3>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Plan Name</th>
                                    <th>Class</th>
                                    <th>Book</th>
                                    <th>Plan Time</th>
                                    <th>Amount</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Count!=0)
                                {
                                    foreach (var m in Model)
                                    {
                                        <tr>
                                            <td><span>@m.PlanName</span></td>
                                            @if (m.subscriptionType == "1")
                                            {
                                                <td><span>@m.PlanTime</span>/year</td>
                                            }
                                            else
                                            {
                                                <td><span>@m.PlanTime</span>/Month</td>
                                            }
                                            <td><span>@m.Class</span></td>
                                            <td><span>@m.Board</span></td>
                                            <td><span>@m.Amount</span></td>
                                            <td><span>@m.startdate</span></td>
                                            @if (m.subscriptionType == "1")
                                            {
                                                DateTime now = DateTime.Now;
                                                var endDate = m.startdate.AddYears(Convert.ToInt32(m.PlanTime)).AddDays(-1);
                                                <td><span>@endDate</span></td>
                                            }
                                            else
                                            {
                                                DateTime now = DateTime.Now;
                                                var endDate = m.startdate.AddMonths(Convert.ToInt32(m.PlanTime)).AddDays(-1);
                                                <td><span>@endDate</span></td>
                                            }

                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" >you not subscribed any subscription Plan.<a href="@Url.Action("Index", "Subscriptions")">Go To Subscribe Book.</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <script>
        $(document).ready(function () {
            $(".dropdown").hover(
               function () {
                   $('.dropdown-menu', this).not('.in .dropdown-menu').stop(true, true).slideDown("400");
                   $(this).toggleClass('open');
               },
               function () {
                   $('.dropdown-menu', this).not('.in .dropdown-menu').stop(true, true).slideUp("400");
                   $(this).toggleClass('open');
               }
           );
            $(".check").css("display", "none");
        });
        $(document).ready(function () {
            $(".mycart").hide();
        });
    </script>
}