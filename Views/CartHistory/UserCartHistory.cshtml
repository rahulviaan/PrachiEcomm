                }

                
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr class="bg-success">
                                <th>
                                    @Html.ActionLink("Payment Date", "UserCartHistory",
            new { sortOrder = "PaymentDate", CurrentSort = ViewBag.CurrentSort })

                                </th>
                                <th>Order No#</th>
                                <th>Amount</th>
                                <th>Payment Status</th>
                                <th>Configuration</th>
                                <th>&nbsp;</th>
                                @*<th>Dispatch No.</th>
                                    <th>Order Status</th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var m in Model)
                                {
                                    if (m.TransactionId != null)
                                    {
                                        <tr>
                                            <td>
                                                @m.UpdatedDate.Value.ToString("dd-MM-yyyy")<br />
                                                <small>@m.UpdatedDate.Value.ToString("hh-mm tt")</small>
                                            </td>
                                            <td><span>@m.TransactionId</span></td>
                                            <td><i class="fa fa-inr"></i><span>&nbsp;@m.Amount</span></td>
                                            <td>
                                                @if (m.Status == 1)
                                                {
                                                    <span class="label label-info">Approved</span>

                                                }
                                                else
                                                {
                                                    <span class="label label-success">Pending</span>
                                                }
                                            </td>
                                            <td>
                                                @if (m.Status == 1)
                                                {
                                                    <a title="Create configuration" href='@Url.Action("DownloadReatilFile", "CartHistory", new { OrderId = @m.Id})' class='link-icon'><i class="fa fa-cogs" aria-hidden="true"></i></a>
                                                }
                                                else
                                                {
                                                    <span>N/A</span>
                                                }
                                            </td>
                                            @*@if (m.AWBNO != null)
                                                {
                                                    <td><span class="label label-info">@m.AWBNO/@m.dispatchby</span></td>
                                                }
                                                else
                                                {
                                                    <td><span class="label label-info">Not Dispatched</span></td>
                                                }
                                                @if (m.IsRecive == true)
                                                {
                                                    <td><span class="label label-info">Received</span></td>
                                                }
                                                else
                                                {
                                                    <td><span class="label label-info">Yet Not Recived</span></td>
                                                }*@

                                            <td>
                                                <a href="@Url.Action("OrderDetail","CartHistory",new { orderId = m.Id })"><span class="text-info">Details</span></a>
                                                @*<a href="OrderDetail?OrderId=@m.Id" ><span class="text-info">Details</span></a>*@

                                            </td>
                                        </tr>
                                    }
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7"><h3 style="color:red;text-align:center">No Order Found</h3></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div id="container" style="margin-left: 20px">
                        <p></p>
                        <p></p>
                        <div class="pagination" style="margin-left: 400px">
                            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
                            of @Model.PageCount   @Html.PagedListPager(Model, page => Url.Action("UserCartHistory", new { page }))
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>

</div>
