                                    @Html.TextBox("todate", Model[0].todate.ToString("MM/dd/yyyy"), new { @class = "form-control date-picker", @id = "id-date-picker-2" })
                                    <span class="input-group-addon">
                                        <i class="fa fa-calendar bigger-110"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div>
                                    @{
                                        var listItems = new List<SelectListItem> {
