@{
    ViewBag.Title = "Confirm Email";
}



<div class="container" style="margin-top:80px; margin-bottom:20px;">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel-body" style="background-color:#fff;box-shadow: 0px 0px 5px #f0dcdc;">
                <form class="form-horizontal" role="form">
                    <div class="panel-heading text-center">
                        <h3 style="margin:10px 0px 10px 0;border-bottom: solid 1px #e9e9e9;padding-bottom: 20px;">@ViewBag.Title.</h3>
                    </div>
                    <div class="panel-body text-center">
                        <p style="padding:40px;">
                            Thank you for confirming your email. Please @Html.ActionLink("Click here to Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
                        </p>
                    </div>
                </form>
</div>
        </div>
    </div>
</div>