@model PrachiIndia.Portal.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
    Layout = "~/Views/Shared/_Layout.cshtml";
}





<div class="wrapper">
    <div class="inner LoginMain">
        <div class="panel-body">
            <div class="col-md-12 form-group text-center" style="margin:15% 0;">
                <img src="/Images/logo.png" alt="Prachi India Pvt Ltd" title="Prachi India Pvt Ltd">
            </div>
            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-gap"></div>

                <div class="container">
                    <div class="row">

                        <div class="panel-body">
                            <div class="panel-heading text-center">
                                <h4 style="margin-bottom:20px;">Forgot Password?</h4>
                                <p>You can reset your password here.</p>
                            </div>
                            <div class="panel-body">
                                <div class="col-md-12">
                                    <form id="register-form" role="form" autocomplete="off" class="form" method="post">
                                        <div class="form-group">
                                            @Html.ValidationSummary("", new { @class = "text-danger" })
                                            <div class="input-group col-md-12">
                                                @*<span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>*@
                                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control email-fieldl", @placeholder = "Enter Your E-mail ID", @style = "border: none !important;" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" class="col-md-12 theme-btn loginBtn btn" value="Reset Password" />
                                        </div>
                                        <input type="hidden" class="hide" name="token" id="token" value="">
                                    </form>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <link href="~/Content/css/login.css" rel="stylesheet" />
    <style>
        .input-group {
            border: solid 1px #f0e3e3 !important;
        }

        .input-group-addon {
            border: none !important;
        }

        .form-control {
            height: 45px;
            box-shadow: none;
        }

            .form-control:focus {
                border-color: #cccccc;
                box-shadow: inherit;
            }
    </style>

}