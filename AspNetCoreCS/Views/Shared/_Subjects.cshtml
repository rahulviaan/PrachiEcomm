@model IEnumerable<DAL.Models.Entities.ClassSubjects>
@if (Model.Count() > 0)
{
    @foreach (var Item in Model)
    {

        <div class="col-md-3">
            <div class="panel-body BooksDiv">
                <p style="margin-top:0;">
                <p><a asp-controller="home" asp-action="MyLibrary" asp-route-SubjectID="@Item.Id" class="btn-2 btn-library btn-2g btn"><img class="img-responsive" src="~/images/subjects/@Item.Image" /></a></p>
          
                <h3 data-toggle="tooltip" data-original-title="@Item.Title">@Item.Title</h3>
                <p data-toggle="tooltip" data-original-title="@Item.Title">@Item.Title</p>



            </div>
        </div>
    }
}
else
{

    <div class="col-lg-12">
        <div class="card-box">

            <div class="row">
                <div class="form-group col-md-12">
                    <div class="panel-body">
                        <p class="text-center">
                            <img class="img-responsive imgWidth" src="~/images/no-itemFound.png" alt="no image" style="width:auto" />

                        </p>

                    </div>
                </div>


            </div>

        </div>
    </div>
}